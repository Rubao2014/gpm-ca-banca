<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:text="@string/custom_list_view_label_num_matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="8sp"
        tools:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:layout_alignTop="@+id/imageViewStatus"
        android:layout_alignStart="@+id/textViewContractNumber" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_list_view_label_num_matricula"
        android:textSize="8sp"
        tools:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textViewContractNumber"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="20160114460"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/imageViewStatus"
        android:layout_toEndOf="@+id/imageViewStatus"
        android:layout_marginStart="20dp" />


    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/form" />

</RelativeLayout>