<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/vaccine_icon_listview" />

    <TextView
        android:id="@+id/txtMultaDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewStatus"
        android:layout_alignParentBottom="false"
        android:layout_alignTop="@+id/imageViewStatus"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imageViewStatus"
        android:gravity="center_vertical"
        android:text="Descricao" />

    <TextView
        android:id="@+id/txtMultaPts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewStatus"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageViewStatus"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="14dp"
        android:gravity="center_vertical"
        android:text="Pts" />

</RelativeLayout>