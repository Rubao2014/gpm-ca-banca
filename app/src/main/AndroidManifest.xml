        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmLembrete"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmMeusDados"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmCartaServicos"
            android:screenOrientation="portrait"
