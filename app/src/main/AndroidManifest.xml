            android:screenOrientation="portrait" />

        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmCadastroSexo"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmFinalizado"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name="br.gov.ba.prefeitura.gpmapp.telas.FrmAtualizacaoCad"
